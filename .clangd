CompileFlags:
    Compiler: clang++
Diagnostics:
  UnusedIncludes: None
  ClangTidy:
    Add: [ modernize*, performance*, readability*, bugprone* ]
    Remove: [android*,  readability-magic-numbers, bugprone-easily-swappable-parameters ]
    FastCheckFilter: Loose
InlayHints:
  BlockEnd: No
  Designators: Yes
  Enabled: Yes
  ParameterNames: Yes
  DeducedTypes: Yes
  TypeNameLimit: 24